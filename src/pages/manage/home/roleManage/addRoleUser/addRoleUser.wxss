/* src/pages/manage/addRole/addRole.wxss */

.input-container{
  position: relative;
  margin-top: 20rpx;
}

.user_name {
  width: 640rpx;
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  margin: 0 auto;
  border-radius: 13rpx;
}
.user_placeholder {
  color: #999;
  font-size: 32rpx;
}
.input-container icon{
  position: absolute;
  right: 60rpx;
  top: 50%;
  transform: translateY(-50%); 
  z-index: 100;
}

.user-list {
  margin-top: 25rpx;
}

.user-add {
  position: relative;
}

.user-add label {
  position: absolute;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 90rpx;
  height: 45rpx;
  border-radius: 25rpx;
  background-image: linear-gradient(-90deg, #7e46dd 0%, #dd60b3 100%);
  margin-top: 10rpx;
  color: #fff;
  font-size: 25rpx;
  font-family: SourceHanSansCN-Regular;
}

