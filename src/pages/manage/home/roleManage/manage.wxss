/* src/pages/manage/roleDetail/roleDetail.wxss */
page {
  height: 100%;
  background-color: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}
.tab-wrapper {
  position: fixed;
  z-index: 10;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-top: 1px solid #e8e8e8;
  border-bottom: 1px solid #e8e8e8;
}
.tab {
  flex: 1;
  font-size: 32rpx;
  color: #000;
  line-height: 100rpx;
  text-align: center;
}

.tab-active {
  border-bottom: 2px solid rgb(221, 70, 209);
}

.content-wrapper {
  width: 100%;
  flex: 1;
  margin-top: 100rpx;
}

.user_add{
  border-radius: 8rpx;
  background: #fff;
  box-shadow: 0 0 10rpx 0 rgba(0, 0, 0, 0.15);
  padding: 20rpx;
  margin: 20rpx 20rpx;
}
.user_add image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 15rpx;
  vertical-align: middle;
}
.user-list{
  margin-top: 30rpx;
}
.user-list .user-delete{
  position: relative;
}
.user-list .user-delete image{
  position: absolute;
  right: 0;
  top: -50rpx;
  width: 64rpx;
  height: 64rpx;
}