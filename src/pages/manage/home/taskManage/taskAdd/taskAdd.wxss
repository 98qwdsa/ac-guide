/* src/event/detail/detail.wxss */
page{
  position: relative;
  background-color: #F5F5F5;
}
form{
  height: 100%;
}
.event_info{
  padding: 0 35rpx;
}
.event_name{
  width: 630rpx;
  border: 1px solid #DCDCDC;
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
.event_placeholder{
  color: #999;
  font-size: 32rpx;
}
.event_desc{
  width: 630rpx;
  border: 1px solid #DCDCDC;
  padding: 20rpx 30rpx;
  margin-top:20rpx;
  height: 135rpx;
  background-color: #fff;
}
.event_view{
  width: 690rpx;
  min-height: 100rpx;
  border: 1px solid #DCDCDC;
  margin-top: 20rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
  background-color: #fff;
}
.event_view text{
  line-height: 100rpx;
  color: #999;
  font-size: 32rpx;
}
.event_view switch{
  float: right;
  line-height: 85rpx;
}
.nav_role{
  height: 100rpx;
  position: relative;
  margin-left: -20rpx;
}
.nav_role text{
  margin-left: 20rpx;
}
.nav_role .text_role{
  position: absolute;
  top: 0;
  color: black;
  font-style: bord;
}
.nav_role checkbox-group{
  line-height: 90rpx;
}
/* .event_view.step{
  height: auto;
} */
.step label{
  font-size: 30rpx;
  color: #666;
}
.step .checkbox-item{
  position: relative;
  display: inline-block;
  width: 650rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #f8f8f8;
  margin-top: 15rpx;
  box-sizing: border-box;
  padding-left: 12rpx;
  padding-right: 45rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;

}

.step .checkbox-item .delete{
  position: absolute;
  right: 18rpx;
  width: 55rpx;
  height: 55rpx;
  margin-top: 20rpx;
  z-index: 100;
}
.step .addStep{
  position: relative;
  height:64rpx;
  margin-top: 40rpx;
}
.step .addStep image{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width:64rpx;
  height:64rpx;
}
checkbox{
  visibility: hidden;
  width: 0;
}
.filler{
  width: 100%;
  height: 120rpx;
  background-color: #F5F5F5;
}
.event_buttons{
  z-index: 101;
  width: 100%;
  position: fixed;
  height: 100rpx;
  bottom: 0;
}
.event_buttons button{
  display: inline-block;
  font-family: SourceHanSansCN-Bold;
  border-radius:0;
  width: 50%;
  height: 100rpx;
}
.event_buttons .reset{
  background-color: #EDEDED;
}
.event_buttons .submit{
  background-image: linear-gradient(-90deg, #7E46DD 0%, #DD60B3 100%);
  color: #fff;
}
button{
  border-radius: 0;
}
button::after{
  border-radius: 0;
}
.picker_container{
  position: relative;
}
.picker_container .right-arrow{
  left: 600rpx;
}
.picker{
  line-height: 100rpx;
  color: #999;
  font-size: 32rpx;
}
.picker-color{
  color: #000;
}





.wx-switch-input {
  width: 42px !important;
  height: 20px !important;
}
.wx-switch-input::before {
  width: 41px !important;
  height: 20px !important;
}
.wx-switch-input::after {
  width: 18px !important;
  height: 18px !important;
}
.right-arrow { 
  display: inline-block;
  width: 10px;
  height: 10px;
  color: #999;
  z-index: 10;
  position: absolute;
  top: 35rpx;
  border-width: 2px 2px 0 0;
  border-style: solid;
  transform: matrix(0.71,0.71,-0.71,0.71,0,0);
  left: 620rpx;
}
