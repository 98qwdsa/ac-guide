
<form bindsubmit="submit">
  <view class="content">
    <checkbox-group bindchange="checkboxChange">
      <label class="checkbox-item" wx:for='{{observer}}' wx:key = "index">
        <checkbox value="{{item._id}}" checked="{{item.checked}}"/> {{item.name}}
      </label>
    </checkbox-group>
  </view>
  <view class="event_buttons">
    <button form-type="submit" class="submit">确定</button>
  </view>
</form>
