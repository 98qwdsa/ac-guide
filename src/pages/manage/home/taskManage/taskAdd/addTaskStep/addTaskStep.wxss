page {
  background-color: #f5f5f5;
}
form {
  height: 100%;
  margin-left: 10rpx;
}
.content {
  padding: 30rpx;
}
.input-container {
  position: relative;
}
.event_name {
  max-width: 690rpx;
  border: 1px solid #dcdcdc;
  padding: 20rpx 30rpx;
  margin-top: 30rpx;
  background-color: #fff;
  padding-right: 90rpx;
  box-sizing: border-box;
  height: 100rpx;
}
.event_placeholder {
  color: #999;
  font-size: 32rpx;
}
.deleteText {
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 100;
}
.tips {
  width: 690rpx;
  border: 1px solid #dcdcdc;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-sizing: border-box;
  min-height: 250rpx;
  margin: 0 auto;
  position: relative;
  padding-bottom: 130rpx;
}
.tips text {
  color: #999;
  font-size: 32rpx;
}
.tips-content{
  background: #f5f5f5;
  padding: 20rpx 60rpx 20rpx 30rpx;
  margin-top: 15rpx;
  font-size: 32rpx;
  position: relative;
}
.tips .delete{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 3rpx;
  width: 60rpx;
  height: 60rpx;
  z-index: 100;
}
.tips  image {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 64rpx;
  height: 64rpx;
}
.verifiers{
  margin: 25rpx;
  border: 1px solid #DCDCDC;
  background-color: #fff;
}
.text{
  display: block;
  margin-top: 25rpx;
  margin-left: 25rpx;
}
.verifiers checkbox-group{
  margin-top: 10rpx;
}
.verifiers .checkbox-item{
  position: relative;
  display: inline-block;
  padding: 0 20rpx;
}
.verifiers .checkbox-item checkbox{
  line-height: 100rpx;
}
.verifiers .checkbox-item text{
  position: absolute;
  right: 30rpx;
  color: #999;
  line-height: 120rpx;
}
.filler{
  width: 100%;
  height: 120rpx;
  background-color: #F5F5F5;
}
.event_buttons {
  width: 100%;
  position: fixed;
  height: 110rpx;
  bottom: 0;
  z-index: 100;
}
.event_buttons button {
  display: inline-block;
  font-family: SourceHanSansCN-Bold;
  border-radius: 0;
  width: 100%;
  height: 110rpx;
}
.event_buttons .submit {
  background-image: linear-gradient(-90deg, #7e46dd 0%, #dd60b3 100%);
  color: #fff;
}
