/* src/pages/manage/home/taskManage/taskProgress/allObserver/allObserver.wxss */
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}
.tab-wrapper{
  position: fixed;
  z-index: 10;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-top: 1px solid #e8e8e8;
  border-bottom: 1px solid #e8e8e8;
}
.tab-wrapper .tab{
  flex: 1;
  font-size: 32rpx;
  color: #000;
  line-height: 100rpx;
  text-align: center;
}
.tab-active {
  border-bottom: 2px solid rgb(221, 70, 209);
}
.content-wrapper {
  width: 95%;
  flex: 1;
  margin-top: 100rpx;
}
.user-item{
  position: relative;
  border-bottom: 2rpx solid #e8e8e8;
  height: 100rpx;
}
.user-item:last-child{
  border-bottom: none;
}
.user-item-text{
  line-height: 100rpx;
  margin-left: 25rpx;
}
.user-item label{
  position: absolute;
  right: 35rpx;
  top: 35rpx;
}
.user-item .user-add{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 40rpx;
  background-color: #46DFA2;
  border-radius: 18rpx;
}
.user-item .cancel-observer{
  width: 158rpx;
  height: 45rpx;
}
.user-item label text{
  font-size: 32rpx;
  color: #fff;
}
.user-item .user-added{
  line-height: 35rpx;
}
.user-item .user-added text{
  font-size: 32rpx;
  color: #999;
}