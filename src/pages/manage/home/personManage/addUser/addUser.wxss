/* src/pages/manage/addUser/addUser.wxss */

page {
  position: relative;
  background-color: #f5f5f5;
}

.content {
  margin-top: 30rpx;
}

.user_name {
  width: 620rpx;
  border: 1px solid #dcdcdc;
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin: 0 auto;
}

.user_placeholder {
  color: #999;
  font-size: 32rpx;
}

.deleteText {
  position: absolute;
  right: 50rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 100;
}

.user_buttons {
  width: 100%;
  position: fixed;
  height: 100rpx;
  bottom: 0;
}

.user_buttons button {
  display: inline-block;
  font-family: SourceHanSansCN-Bold;
  border-radius: 0;
  width: 50%;
  height: 100rpx;
}

.user_buttons .reset {
  background-color: #ededed;
}

.user_buttons .submit {
  background-image: linear-gradient(-90deg, #7e46dd 0%, #dd60b3 100%);
  color: #fff;
}
button{
  border-radius: 0;
}
button::after{
  border-radius: 0;
}
