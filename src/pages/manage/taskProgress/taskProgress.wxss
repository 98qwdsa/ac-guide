/* src/pages/manage/taskProgress/taskProgress.wxss */
page{
  height: 100%;
  background-color: #F5F5F5;
}
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}
.tab-wrapper{
  position: fixed;
  z-index: 10;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-top: 1px solid #e8e8e8;
  border-bottom: 1px solid #e8e8e8;
}

.tab-left,.tab-middle, .tab-right{
  flex: 1;
  font-size: 32rpx;
  color: #000;
  line-height: 100rpx;
  text-align: center;
}

.tab-active{
  border-bottom: 2px solid  rgb(221, 70, 209);
}

.content-wrapper{
  width: 95%;
  flex: 1;
  margin-top: 100rpx;
}

.task_progress_item{
  margin-top: 20rpx;
}
.content-wrapper .add{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 90rpx;
  height: 38rpx;
  border-radius: 18rpx;
  background-image: linear-gradient(-90deg, #7E46DD 0%, #DD60B3 100%);
  margin-top: 10rpx;
  margin-left: 560rpx;
  color: #fff;
  font-size: 25rpx;
  font-family: SourceHanSansCN-Regular;
}
