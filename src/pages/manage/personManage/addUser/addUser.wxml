<!--src/pages/manage/addUser/addUser.wxml-->
<form bindsubmit="formSubmit" bindreset="formReset" enctype="multipart/form-data">
  <view class="content"> 
    <input  placeholder="姓名" placeholder-class="user_placeholder"
      class="user_name" value='{{userName}}' name='userName'/>
  </view> 
  <view class='user_buttons'>
    <button form-type='reset' class="reset">取消</button>
    <button form-type='submit' class="submit" >确定</button>
  </view>
</form>