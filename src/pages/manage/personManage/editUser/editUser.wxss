/* src/pages/manage/personManage/editUser/editUser.wxss */
page{
  height: 100%;
  background-color: #f5f5f5;
}

.userName{
  padding: 0 25rpx;
  margin-top: 30rpx;
}
.input{
  border: 1px solid #DCDCDC;
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
  background: #fff;
}
.powerRole{
  padding: 0 25rpx;
  margin-top: 40rpx;
}
checkbox-group{
  margin-top: 20rpx;
  border: 1px solid #DCDCDC;
  padding: 20rpx 30rpx;
  background: #fff;
}
.checkbox{
  display: inline-block;
  width: 100%;
  margin: 10rpx 0;
}
.event_buttons{
  width: 100%;
  position: fixed;
  height: 100rpx;
  bottom: 0;
}
.event_buttons button{
  display: inline-block;
  font-family: SourceHanSansCN-Bold;
  border-radius:0;
  width: 50%;
  height: 100rpx;
}
.event_buttons .reset{
  background-color: #EDEDED;
}
.event_buttons .submit{
  background-image: linear-gradient(-90deg, #7E46DD 0%, #DD60B3 100%);
  color: #fff;
}