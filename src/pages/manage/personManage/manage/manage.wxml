<!--src/pages/manage/personDetail/personDetail.wxml-->
<view class="input-container">
  <input class="input" placeholder-class="search_name_placeholder"
    bindinput="bindKeyInput" placeholder="搜索" value="{{searchInput}}"/>
  <icon type="clear" size="20" catchtap="deleteText"/>
</view>
<view class="user_add" bindtap="addUser">
  <text>添加</text>
</view>
<view class="user-list">
  <block wx:for="{{userList}}" wx:key="{{index}}">
    <user-item userName="{{item.name}}">
      <view class="user-delete" bindtap="deleteUser" data-deleteid="{{item._id}}">
        <image src="../../../../asset/task_step_delete.png"></image>
      </view>
    </user-item>
  </block>
</view>
