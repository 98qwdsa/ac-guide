<!--src/pages/manage/roleDetail/roleDetail.wxml-->
<view class='container'>
  <view class="tab-wrapper">
    <block wx:for="{{role}}" wx:key="item">
      <view id="{{item.code}}" class='tab {{currentTab === item.code ? "tab-active":""}}' 
      bindtap='switchTab'>{{item.code}}</view>
    </block>
  </view>

  <view class='content-wrapper'>
    <view class="user_add" bindtap="addRoleUser">
      <text>添加</text>
    </view>
    <view class="user-list">
      <block wx:for="{{userList}}" wx:key="{{index}}">
      <user-item userName="{{item.name}}">
        <view class="user-delete" bindtap="deleteUser" data-deleteid="{{item._id}}">
          <image src="../../../../asset/task_step_delete.png"></image>
        </view>
      </user-item>
      </block>
    </view>
  </view>
</view> 
