<form bindsubmit="formSubmit" bindreset="formReset" enctype="multipart/form-data">
  <view class="content">
     <text>新入职员工完成事项</text> 
     <input  placeholder="步骤名称" placeholder-class="event_placeholder"
          class="event_name" value='{{stepName}}' name='stepName'
          bindblur='bindNameInput' />
  </view> 
  <view class='event_buttons'>
    <button form-type='reset' class="reset">取消</button>
    <button form-type='submit' class="submit" >确定</button>
  </view>
</form>
