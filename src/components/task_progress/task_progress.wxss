/* components/task_progress/task_progress.wxss */
.wrap{
  border: 1px solid rgba(0, 0, 0, 0.15);
  border-radius: 8rpx;
  background: #fff;
  box-shadow: 0 0 10rpx 0 rgba(0, 0, 0, 0.15);
  padding: 20rpx;
  font-family: SourceHanSansCN-Regular;
}
.first{
  margin-top: 10rpx;
}
.first image{
  width: 70rpx;
  height: 70rpx;
  vertical-align: middle;
}
.first text{
  font-size: 36rpx;
}
.second{
  display: flex;
  flex-direction: row;
  margin: 20rpx 6rpx 20rpx 0;
}
.second label{
  flex: 1;
  height: 6rpx;
  margin-right: 6rpx;
  background: #e8e8e8;
}
.second label:nth-child(1){
  background: #46DFA2;
}
.third{
  overflow: hidden;
  margin-bottom: 10rpx;
}
.third .left{
  float: left;
}
.third .left text{
  font-family: SourceHanSansCN-Regular;
  font-size: 34rpx;
  color: #999;
}
.third .left image{
  width: 65rpx;
  height:65rpx;
  vertical-align: middle;
}

.third .right{
  float: right;
}
.third .right label{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 90rpx;
  height: 38rpx;
  border-radius: 18rpx;
  background: #efefef;
  margin-top: 15rpx;
}
.third .right label text{
  color: #666;
  font-size: 30rpx;
  font-family: SourceHanSansCN-Regular;
}