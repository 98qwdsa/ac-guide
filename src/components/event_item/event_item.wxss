/* components/event_item/event_item.wxss */
@import "../../common/css/common.wxss";

.warp {
  border: 1px solid rgba(0, 0, 0, 0.15);
  border-radius: 8rpx;
  background: #fff;
  box-shadow: 0 0 10rpx 0 rgba(0, 0, 0, 0.15);
  padding: 26rpx;
  font-family: SourceHanSansCN-Regular;
}

.warp .item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.warp .item:last-child {
  margin-bottom: 0;
}

.warp .item .first {
  flex-grow: 2;
}

.warp .item .seconed {
  flex-grow: 10;
  padding-left: 20rpx;
}

.warp .item .last {
  flex-grow: 2;
}

.warp image {
  width: 40rpx;
  height: 40rpx;
}

.warp button {
  border-radius: 9px;
  width: 90rpx;
  height: 36rpx;
  font-size: 24rpx;
  padding: 0;
  color: #fff;
  line-height: 36rpx;
  margin: 0;
}

.warp .title {
  font-size: 40rpx;
  line-height: 40rpx;
  color: #222;
}

.warp .sub_title {
  font-size: 14px;
  color: #999;
}
